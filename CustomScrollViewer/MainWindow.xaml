            </TextBlock>
        </ScrollViewer>

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="up"
                Width="300"
                Click="up_Click"
                Content="Up" />
            <Button
                x:Name="down"
                Width="300"
                Margin="50,0,0,0"
                Click="down_Click"
                Content="Down" />
        </StackPanel>
    </Grid>
</Window>
