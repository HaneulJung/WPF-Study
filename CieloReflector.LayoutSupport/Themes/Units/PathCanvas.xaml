<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:CieloReflector.LayoutSupport.UI.Units">

    <Style TargetType="{x:Type units:PathCanvas}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:PathCanvas}">
                    <Viewbox>
                        <Path Width="24" Height="24" Data="{TemplateBinding Data}" Fill="{TemplateBinding Fill}"/>
                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>